<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient  
        		android:startColor="#009ACD"
                android:endColor="#00688B"  
        		android:angle="270"  />
            <stroke
                android:width="2dp"
                android:color="#dcdcdc"  />
            <!-- 圆角 -->
            <corners
                android:radius="6dp" />

        </shape>
    </item>



    <item>       
        <shape>
            <gradient  
        		android:startColor="#838B83"  
        		android:endColor="#454545"    
        		android:angle="270"  />  

            <corners 
                android:radius="6dp"/>

        </shape>
    </item>
</selector>